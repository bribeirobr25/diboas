# Environment Configuration Example
# Copy this file to .env and configure values for your environment

# Application Environment (development|staging|production)
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_SECURITY_MONITORING=true

# Security Configuration
VITE_SECURITY_MODE=strict
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMITING=true

# Performance Configuration
VITE_ENABLE_CACHE=true
VITE_BUNDLE_ANALYZER=false
VITE_ENABLE_PWA=true

# Monitoring & Analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_LIGHTHOUSE_CI_TOKEN=

# Build Configuration
VITE_APP_VERSION=0.0.0
VITE_BUILD_TIME=
VITE_GIT_COMMIT=

# Docker Configuration
COMPOSE_PROJECT_NAME=diboas
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Deployment Configuration
DEPLOY_ENVIRONMENT=development
DEPLOY_DOMAIN=localhost
DEPLOY_SSL_ENABLED=false

# External Services
REDIS_URL=redis://localhost:6379
DATABASE_URL=
CDN_URL=

# Notification Configuration
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_API_KEY=